   <!-- Display News Data -->
<!-- Display News Data -->
<h2 class="mt-4">Latest News</h2>
<ul class="list-group">
  <% newsData.forEach(news => { %>
    <li class="list-group-item">
      <ul>
        <% news.data.articles.slice(0, 10).forEach(article => { %>
          <li>
            <strong><%= article.title %></strong> - <%= article.description %>
          </li>
        <% }); %>
      </ul>
    </li>
  <% }); %>
</ul>



